<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zype.android.ui.video_details.fragments.summary.SummaryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/episode_title"
            style="@style/text.title"
            tools:text="episode_title"/>

        <TextView
            android:id="@+id/episode_description"
            style="@style/text.common"
            tools:text="episode_description"/>

        <com.ns.developer.tagview.widget.TagCloudLinkView
            android:id="@+id/tag_cloud"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            app:isDeletable="false"
            app:tagLayoutColor="@color/twitter_bg_color"
            app:tagTextColor="@android:color/white"
            app:tagTextSize="8sp"/>
    </LinearLayout>
</ScrollView>