<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zype.android.ui.main.fragments.favorite.FavoritesFragment"
    >
    <ListView
        android:id="@+id/listFavorites"
        style="@style/common_list"
        tools:listitem="@layout/list_item_base"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:id="@+id/layoutEmpty"
        android:gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/favorites_empty_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/favorites_empty_message"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:gravity="center"
            />
<!--
        <TextView
            android:id="@+id/empty"
            style="@style/text.title"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="@string/download_empty_list"/>
-->
    </LinearLayout>
</FrameLayout>
